Funcion N_14 <- ejercicio_14 ( 1 )
	//Calculadora simple: Crea una calculadora que realice operaciones básicas
	//como suma, resta, multiplicación y división, según la elección del usuario.
	Definir num1, num2, resultado Como Real	// defino mis variables Como Real
	Definir operador Como entero
	Escribir "ingrese un numero"
	Leer num1									// leo y asigno el primer numero a num1
	Escribir "ingrese el segundo numero"
	Leer num2									// leo y asigno el segundo numero a num2
	Escribir  "opciones"						// le doy opciones al usuario segun el operador que desee emplear
	Escribir  "1 = sumar"						//1_sumar; 2_restar;3_multiplicar;4_dividir
	Escribir  "2 = restar"
	Escribir  "3 = multiplicar"
	Escribir  "4 = dividir"
	leer operador								// leo y asigno la respuesta en operador
	Segun operador Hacer
		1:
			resultado= num1+num2				// si la respuesta es 1 se suman los 2 numeros
		2:
			resultado= num1-num2				// si la respuesta es 2 se restan los 2 numeros
		3:
			resultado= num1*num2				// si la respuesta es 3 se multiplican los 2 numeros
		4: 
			resultado= num1/num2				// si la respuesta es 4 se dividen 
		De Otro Modo:
			Escribir "opcion incorreta" 		// si escribe un numero que no estaba entre las opciones= mensaje
	Fin Segun
	Escribir resultado
Fin Funcion

Funcion N_13 <- ejercicio_13 ( 1 )

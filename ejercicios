Funcion N_24 <- ejercicio_24 ( 1 )//Día de la semana: Pide al usuario que ingrese un número del 1 al 7, donde 1
	//representa el domingo, 2 el lunes, 3 el martes, y así sucesivamente. Luego,
	//utiliza una estructura switch para mostrar el nombre del día de la semana
	//correspondiente al número ingresado.
	Definir dia Como Entero; Definir diaf Como Caracter//defino las variables como caracter y  como entero 
	Escribir "Ingrese un numero del 1 al 7"//pido al usuario un nuemero entre el 1 y el 7
	leer dia//lo asigno a la variable dia 
	si dia = 1 Entonces//si dia es 1 entonces escribir es domingo
		diaf= "Domingo"
	SiNo//sino aplico condiacional
		si dia=2 Entonces//si el dia es 2 entonces escribir es lunes
			diaf = "Lunes"
		SiNo//sino aplico condiacional
			si dia =3 Entonces//si el dia es 3 escribir es martes
				diaf="Martes"
			SiNo//sino aplico condiacional
				si dia =4 Entonces//si el dia es 4 Escribir es miercoles
					diaf= "Miercoles"
				SiNo//sino aplico condiacional
					si dia= 5 Entonces//si el dia es 5 Escribir es jueves
						diaf= "Jueves"
					sino//sino aplico condiacional 
						si dia = 6 Entonces//si el dia es 6 Escribir es viernes
							diaf="Viernes"
						sino //sino aplico condiacional
							si dia = 7 Entonces//si el dia es 7 Escribir es sabado
								diaf="Sabado"
							SiNo
								Escribir "Numero incorrecto"
							FinSi
						FinSi
					FinSi
				FinSi
			FinSi
		FinSi
	FinSi
	Escribir diaf
	
Fin Funcion

Funcion N_23 <- ejercicio_23 ( 1 )//Día del mes con respecto a la segunda quincena: Solicita al usuario que ingrese
	//un número de día del mes (por ejemplo, del 1 al 31) y verifica si ese día
	//pertenece a la primera quincena (días 1-15) o a la segunda quincena (días 16-31).
	
	definir dia Como Entero					//defino las variables como entero
	Escribir "Ingrese un número de día del mes del 1 al 31"//pregunto al usuario por un dia  del mes
	leer dia									//le asigno el dato a la variable dia
	si (dia >=1 y dia <=15) Entonces				//aplico condicional si entonces, si está entre el 1 y el 15 decir pertenece a la primera quincena
		Escribir dia, " Pertenece a la primera quincena"
	SiNo										//sino , aplico otro si entonces
		si (dia>=16 y dia <=31) Entonces			//si el dia esta entre el 16 y el 31  decir pertenece a la segunda quincena 
			Escribir dia, " Pertenece a la segunda quincena"
		SiNo
			Escribir "No se puede "
		FinSi
		
	FinSi
	
Fin Funcion

Funcion N_22 <- ejercicio_22 ( 1 )//Signo zodiacal: Pide al usuario que ingrese su mes y día de nacimiento, luego
	//determina su signo zodiacal. Puedes usar una serie de declaraciones if para
	//comparar las fechas ingresadas con las fechas límite de cada signo zodiacal.			
	
	Definir  dia, mes, c Como Entero//defino las variables como entero y una como caracter
    Definir signo Como Caracter
	Escribir "Ingresa Día de Nacimiento" //pregunto al usario su dia de nacimiento y se lo asigno a la variable dia
	leer dia
	Escribir "Ingresa Mes de Nacimiento"//pregunto al usario su mes nacimiento y se lo asigmo a la variable mes
	leer mes 
	c=0
	si (mes= 1 y (dia>= 21 y dia<= 31)) o (mes= 2 y (dia <= 19)) Entonces//si el mes es igual a 1 o igual a 2 y entre el 21 de enero y 19 de febrero 
		signo = "Acuario"//escribir tu sigmo es acuario
		c=1
	SiNo
		si(mes=2 y (dia >= 19 y dia <= 29)) o (mes=3 y(dia<=20)) Entonces//si el mes es igual a 2 o igual a 3 y entre el 19 de febrero y 20 de marzo
			signo= "Piscis"//escribir tu signo es piscis
			c=1
		SiNo
			si(mes=3 y (dia >= 21 y dia <=31)) o (mes=4 y (dia<=19))Entonces//si el mes es igual a 3 o igual a 4 entre el 21 de marzo  y el 19 de abril
				signo= "Aries"//escribir tu signo es Aries
				c=1
			SiNo
				si (mes=4 y (dia>=20 y dia <=30)) o (mes=5 y (dia<=20))Entonces//si el mes es igual a 4 o igual a 5 entre el 20 de abril y el 20 mayo
					signo= "Tauro"//escribir tu signo es tauro
					c=1
				SiNo
					si (mes= 5 y (dia >=21 y dia <= 31)) o (mes = 6 y (dia<=20)) Entonces//si el mes es igual a 5 o igual a 6 entre el 21 de mayo y el 20 de junio
						signo= "Géminis"//escribir tu signo es geminis
						c=1
					SiNo
						si (mes = 6 y (dia >=21 y dia <=30)) o (mes =7 y( dia <=22)) Entonces//si el mes es igual a 6 o igual a 7 entre el 21 de junio y el 22 de julio
							signo= "Cáncer"//escribir tu signo es cancer; tienes cancer
							c=1
						SiNo
							si (mes = 7 y (dia >=23 y dia<=31)) o (mes= 8 y (dia<=22)) Entonces//si el mes es igual a 7 o igual a 8 entre el 23 de julio y el 22 de agosto 
								signo= "Leo"//escribir tu signo es Leo
								c=1
							SiNo
								si (mes =8 y (dia>=23 y dia<=31)) o (mes=9 y (dia<=22)) Entonces// si el mes es igual a 8 o igual a 9 entre el 23 de agosto y el 22 de septiembre 
									signo= "Virgo"//escribir tu signo es Virgo
									c=1
								SiNo
									si (mes= 9 y (dia>=23 y dia <=30)) o (mes=10 y (dia<=22)) Entonces//si el mes es igual a 9 igual a 10 entre el  23 de septiembre y el 22 de octubre
										signo= "Libra"//escribir tu signo es libra
										c=1
									SiNo
										si (mes =10 y (dia>=23 y dia <=31)) o (mes=11 y (dia<=21)) Entonces//si el mes es igual a 10 o igual a 11 entre el 23 de octubre y el 21 de noviembre 
											signo= "Escorpio"//escribir tu signo es escorpio
											c=1
										SiNo
											si (mes =11 y (dia>=22 y dia<=30)) o (mes=12 y (dia<=21)) Entonces// si el mes es igual a 11 o igual a 12 entre el 22 de noviembre  y el 21 de diciembre 
												signo= "Sagitario"//escribir tu signo es sagitario
												c=1
											SiNo
												si(mes = 12 y (dia>=22 y dia <= 31)) o (mes= 1 y (dia<=18)) Entonces//si el mes es igual a 12 o igual a 1 entre el 22 de diciembre y el 18 de enero  
													signo= "Capricornio"//escribir tu signo es capricornio
													c=1
												SiNo
													Escribir "la fecha ingresada es incorrecta"
												FinSi
											FinSi
										FinSi
									FinSi
								FinSi
							FinSi
						FinSi
					FinSi
				FinSi
			FinSi
		FinSi
	FinSi
	si c=1 Entonces
		Escribir "Tu signo zodiacal es ",signo
	sino 
		Escribir "la fecha es incorrecta"
	FinSi
	
Fin Funcion

Funcion N_21 <- ejercicio_21 ( 1 )//Año bisiesto: Solicita al usuario un año y determina si es un año bisiesto o no.
	//Un año bisiesto es divisible por 4, pero no por 100, a menos que también sea
	//divisible por 400.
	definir año Como Entero			//defino la variable Como Entero
	Escribir "Ingrese Año para determinar si es bisiesto o no"//pregunto un año y le asigno a la variable año
	leer año
	Si año mod 4 = 0 Entonces			//aplico condicional si  entonces 
		Escribir "Año bisiesto"		// si a años lo divido entre 4 y su mod es 0 entonces escribir es año bisiesto 
	SiNo
		Escribir "Año no bisiesto"		//si el mod es cualquier otro numero escribir el año no es bisiesto
	Fin Si
	
Fin Funcion

Funcion N_20 <- ejercicio_20 ( 1 )//. Número positivo, negativo o cero: Pide al usuario que ingrese un número y
	//muestra si es positivo, negativo o cero.
	Definir num Como Real					//defino las variables Como Real
	Escribir "Ingrese un numero"			//pregunto un numero al usuario y Lo asigno A la variable num
	leer num
	si (num>=1) Entonces					//si el Numero es Mayor o igual a 1 Entonces; Escribir Su numero es positivo
		Escribir "Su numero es positivo"
	SiNo									//sino aplico otro condIciOnal su enTonces 
		si (num=0) Entonces				// si el nuMero Es Igual a 0 Escribir su nuMEro eS cero
			Escribir "Su numero es 0, tal cual"
		sino								 //sino aPlico otro condiciNal si entonces
			si (num<0) Entonces			//si el numerO es menor a 0 Escribir su numerO es negativo
				Escribir "Su numero es negativo"
			sino //sino se cumple lo anteriOr escribiR al usuario que no esta iNgreSandO un NumerO
				Escribir "No esta ingresando un numero Real"
			finsi
		FinSi
	FinSi
	
Fin Funcion

Funcion N_19 <- ejercicio_19 ( 1 )
	// Calculadora de BMI: Crea un programa que calcule el índice de masa corporal
	//(BMI) a partir del peso y la altura del usuario, y luego indique si está en una
	//categoría de peso saludable.
	Definir pesousuario,alturausuario,bmi Como Real//defino las variables Como Real
	
	Escribir "Altura en metros"//pregunto la altura del usuario en metros y se lo asigno a la variable alturaUsuario
	leer alturausuario
	Escribir "Peso en kilogramos"//pregunto el peso del usuario en metros y se lo asigno a la variable pesoUsuario
	leer pesousuario
	bmi=pesousuario/(alturausuario*alturausuario)//aplico una formula para calcular el bmi; altura*altura y lo divido por el peso
	si(bmi< 18.5) Entonces//aplico condicional si Entonces; si el resultado del bmi es menor a 18.5  Escribir su peso es bajo
		Escribir "Su peso es bajo"
	SiNo //sino el resultado es mayor a 18.5 entonces aplico otro si entonces
		si(bmi>=18.5 y bmi<=24.9)Entonces// si el bmi esta entre 18.5 y 24.9  Entonces Escribir  su peso es normal
			Escribir "Su peso es Normal"
		SiNo// sino el resultado es mayor a 24.5 entonces aplico otro si entonces
		si (bmi>=25 y bmi <=29.9)Entonces//si el resultado esta entre 25 y 29.9 Entonces Escribir tiene sobre peso
				Escribir "Tiene sobrepeso"
			SiNo//sino el rsultado es mayor a 29.9 entonces escribir tiene obesidad
				Escribir "Tiene Obesidad"
			FinSi
		FinSi
	FinSi
	Escribir bmi// al final escribo el bmi
	
Fin Funcion


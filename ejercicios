Funcion N_35 <- ejercicio_35 ( 1 )//. Calculadora de costo de servicio: Pregunta al usuario cuántas horas de servicio
	//necesita y calcula el costo total. Si las horas son más de 10, aplica un descuento del 20%
	definir descuento,costo,h, res Como Real//defino mis variables como reales 
	descuento=0.20; costo=2;
	Escribir "Cuantas horas de servicio nesesita una(1) hora le cuesta 2$ ";//pregunto cuantas horas nesesita
	leer h;//leo y le asigno el dato a la variable h
	res=h*costo
	Si h>10 Entonces//aplico condicional si Entonces, si es mayor a 10 se le descuenta el 20% 
		Escribir "Tiene un descuento del 20% por superar las 10 horas"
		res=res-(res*descuento)
		Escribir "El total es $",res
	SiNo//sino se le cobra el total normalmente
	Escribir "El total es $",res
Fin Si
	
Fin Funcion

Funcion N_34 <- ejercicio_34 ( 1 )//Calculadora de descuento por volumen de compra: Permite al usuario ingresar
	//la cantidad de unidades de un producto que va a comprar y el precio unitario.Aplica descuentos por volumen de compra según las siguientes reglas:
	// 10-50 unidades: 5% de descuento 51-100 unidades: 10% de descuento Más de 100 unidades: 15% de descuento
	definir unc, pc,pcf, des1,des2,des3 Como Real//declaro mis variables Como Real
	des1=0.05; des2= 0.10; des3=0.15
	Escribir "Descuento por volumen de compra"//pregunto cuantas unidades va a llevar
	Escribir "Cuantas unidades de un producto va a comprar"
	leer unc//leo y asigno en la vairble unc
	Escribir "Cual es el precio unitario"//pregunto por el precio y se lo asigno a la variable pc
	Leer pc
	pcf=unc*pc //en caso de que los datos ingresados se menor a 10 se presentara directamente este resulatdo 
	Si unc >=10 y unc <=50 Entonces//aplico 3 condicionales si Entonces 
		Escribir "Tiene un descuento del %5, Total $",pcf-(pcf*des1)// en el caso de que esté entre el 10 y el 50 sele da el descuento de 5%
	SiNo
		Si unc>=51 y unc <=100 Entonces
			Escribir "Tiene un descuento del %10, Total $",pcf-(pcf*des2)// en el caso de que esté entre el 51 y el 100 sele da el descuento de 10%
		SiNo
			Si unc>100 Entonces
				Escribir "Tiene un descuento del %15, Total $",pcf-(pcf*des3)// en el caso de que esté en el 101 para arriba sele da el descuento de 15%
			SiNo
				Escribir "Su total es de $",pcf// si es menor a 10 no se le da ningun descuento
			Fin Si
		Fin Si
	Fin Si
	
Fin Funcion

Funcion N_33 <- ejercicio_33 ( 1 )//Calculadora de descuento por lealtad del cliente: Pide al usuario que ingrese el
		//total de sus compras mensuales durante un año. Si el total es superior a $500,
		//aplica un descuento del 10% en la próxima compra.
		Definir cp,cp1,descuento,to Como Real; Definir res Como Caracter//defino las variables Como Entero y una Como Caracter
		descuento=0.10
		
		Escribir "Escriba el total de sus compras mensuales durante un año ($)"//pregunto el total de sus compras de todo el año
		leer cp//le asigno a cp el dato
		Si cp>500 Entonces//uso 2 condicionales si Entonces en el primero si cp es mayor a 500 le doy el descuento
			Escribir "GENIAL! Tiene un descuento del %10 para su proxima compra"//sino digo "a tu casa"
			Escribir "Desea usar su descuento ahora (si, no)" 
			leer res//luego le pregunto si quiere usar su descuento ahora
			Si res="si" Entonces //uso el segundo si Entonces, si su respuesta es (si) el codigo sigue 
				Escribir "Escriba el total de la compra de hoy"//pregunto el total de la compra
				leer cp1//le asigno el dato a la variable cp1
				to=cp1-(cp1*descuento)
				Escribir "su total es: $",to//escribo el resultado en consola
			SiNo
				Escribir "No hay problema, su descuento seguira vigente hasta que lo canjee"//si el resultado es no escribo mensaje en consola
			Fin Si
		SiNo
			Escribir "Si su compras de todo el año superaban los $500 Recibia un descuento para su proxima compra"
		Fin Si
	
Fin Funcion

Funcion N_32 <- ejercicio_32 ( 1 )//Calculadora de envío con tarifas diferentes: Crea un programa que permita al
	//usuario ingresar la distancia de envío y calcule el costo del envío. Si la distancia
	//es inferior a 50 km, el costo es de $10. Si la distancia es de 50 km o más, el costo es de $20.
	definir km, co1,co2 Como Entero//defino variables Como Entero
	Escribir "Tarifas de envio, ingrese la distancia a recorrer para su envio(En Km)"//pregunto por los kilometros
	Leer km//leo el dato y le asigno a km
	Si km<50 Entonces//utilizo condicional si Entonces , si los kilometros son menores a 50 el costo de envio es de $10
		Escribir "El costo de envio es de $10"
	SiNo 
		Escribir "El costo de envio es de $20"//si los kilometros son mayores o iguales a 50 el costo de envio es de $20
	Fin Si//escribo el resultado
	
Fin Funcion

Funcion N_31 <- ejercicio_31 ( 1 )//Descuento por antigüedad en la empresa: Pregunta al usuario cuántos años ha
	//estado trabajando en una empresa y calcula su bono de antigüedad. Si ha
	//	trabajado más de 5 años, otorga un bono del 5% sobre su salario.
	Definir años, salario Como Entero//defino las variables Como Entero
	bono=0.05;//le doy a bono un valor de 0.05 (para multiplicarlo y agregarlo al salario)
	Escribir "Cuantos años a estado trabajando en una empresa ";//pregunto "Cuantos años a estado trabajando"
	leer años;//escribo el dato en la varible años
	Escribir "Escriba su salario (Mensual)";//pregunto(Cuanto es su salario al mes)
	Leer salario//escribo el dato en la variable salario, aplico condicional si entonces
	si años>=5 Entonces//si los años que trabajo son mayores o iguales a 5 entonces se la agrega el bono
		salario=salario+(salario*bono)
		Escribir "Tiene un bono del 5% sobre su salario $",salario//escribo el resultado
	sino //si no trabajo 5 años o mas no se le suma el bono
		Escribir "No ha trabajado mas de 5 años (Sin cambios)"
	FinSi
	
Fin Funcion

Funcion N_30 <- ejercicio_30 ( 1 )//Calculadora de impuestos sobre el salario: Solicita al
	// usuario que ingrese su
	//salario anual y calcula el impuesto sobre la renta según las siguientes tasas:
	// Hasta De $10,001 a $20,000: 10% , menor a $10,000: 5% y
	// Más de $20,000: 15%
	definir salario_anual, impuesto1, impuesto2,impuesto3, total Como Real//defino las variables Como Real
	impuesto1=0.05//le doy impuesto1, impuesto2, impuesto3 los valores de 5%, 10%, 15% dividiendolos para 100, para omitir un paso en el calculo
	impuesto2=0.10
	impuesto3=0.15
	Escribir "ingrese su salario anual"
	leer salario_anual // le pido al usuario que ingrese su salario anual  
	si salario_anual<=10000 Entonces//si el salario es menor o igual a 10 mil aplico un impuesto del 5%
		total=(salario_anual*impuesto1)//aplico la formula
		Escribir " su salario anual es menor a $10000 el impuesto a pagar es del 5%"
		Escribir "impuesto a pagar $", total;//escribo el impuesto a pagar en consola
	sino 
		si (salario_anual>=10001) y( salario_anual <= 20000) Entonces// si el salario esta entre 10mil y 20mil aplico un impuesto del 10%
			total=(salario_anual*impuesto2)//aplico formula
			
			Escribir " su salario anual esta entre $10000 y $20000 el impuesto a pagar es del 10%"
			Escribir "impuesto a pagar $",total;//escribo el impuesto a pagar en consola
		SiNo
			si salario_anual > 20000 Entonces//si el salario es mayor a 20mil aplico un impuesto del 15%
				total=(salario_anual*impuesto3)//aplico formula
				Escribir " su salario anual es mayor a $20000 el impuesto a pagar es del 15%"
				Escribir "impuesto a pagar $",total;//escribo el resultado en consola
			FinSi
		FinSi
		
	FinSi
	
Fin Funcion

Funcion N_29 <- ejercicio_29 ( 1 )//Calculadora de compra con múltiples artículos: Permite al usuario ingresar el
	//precio y la cantidad de varios artículos que está comprando. Calcula el total de
	//la compra y aplica un descuento del 10% si el total es mayor a cierta cantidad
	//	(por ejemplo, $100)
	//asigno las variables como reales y el numero de articulos como entero
	Definir total, cantidad, subtotal, precio,descuento Como Real
	definir numart Como Entero
	descuento=0.10
	total=0
	Escribir "Numero de articulos llevará"//se asigna el numero de articulos
	leer numart
	Para i=1 Hasta numart Con Paso 1 Hacer//se hace un ciclo equivalente al numero de articulos
		escribir "Cuantos productos del articulo: ",i," lleva"
		leer cantidad//se toma la cantidad de productos 
		Escribir "Cuanto cuesta el articulo: ",i
		leer precio//se toma el precio de los productos
		subtotal=cantidad*precio//se multiplica la cantidad de productos por su precio
		total=total+subtotal// durante el ciclo se van a almacenar todos los datos en el total
	Fin Para
	Si total>100 Entonces//si el total es mayor a 100 se ejecuta acciones por verdadero
		total=total-(total*descuento)//se le quita la decima parte del precio original
		Escribir "Su total supera los $100 y por ello recive un descuento de 10%"
		Escribir "valor final $",total
	SiNo//si el total es inferior a 100 no se le ofrece el descuento
	Escribir "Su total es $",total
Fin Si

	
Fin Funcion

Funcion N_28 <- ejercicio_28 ( 1 )//Calculadora de sueldo con aumento: Pide al usuario que ingrese su salario
	//actual y el porcentaje de aumento que recibirá. Calcula y muestra el nuevo
	//salario después del aumento.
	
	Definir  salario, aumento, valorfinal Como Real//defino las variables Como Real
	Escribir "Ingrese su salario"//le pido al usuario que ingrese su salario al mes
	Leer  salario//le asigno el valor a salario
	Escribir  "Ingrese el porcentaje de aumento"//le pido al usuario un porcentaje para el aumento
	leer aumento//le asigno el valor a la variable aumento
	valorfinal= salario+(salario*(aumento/100))//aplico una formula 
	Escribir "su salario es ", valorfinal//imprimo el resultado en consola
	
Fin Funcion


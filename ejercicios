	Funcion N_5 = ejercicio_5 ( a, b, u )//Si a=12 y b=9, calcula el valor de u = b - a + 3 * a mod b.
		a= 12; b=9; u=0//les asigno un valor numerico de acuerdo a la operacion
		u= b * a + 3 * a mod b//le doy el valor de u la operacion en general
		Escribir  "Ejercicio_5"
		escribir 9 - 12 + 3 * 12 mod 9
		//u = 9 - 12 + 3 * 12 mod 9
		//u= 9 - 12 + 36 mod 9
		// u = 9 - 12 + 0
		//u = -3
	Fin Funcion
	
	Funcion N_4=  ejercicio_4 (a,b,v)//Para a=8 y b=5, encuentra el valor de v = 2 * b + a div 2 + 4 * b mod a.
		a=8; b=5 ; v=0//les asigno un valor numerico de acuerdo a la operacion
		v= 2 * b + a + trunc(2+4) * b mod a //le doy el valor de v la operacion en general
		Escribir "Ejercicio_4"
		Escribir 2 * 5 + trunc(8 + 2) +4 * 5 mod 8
		//v = 2 * b + a div 2 + 4 * b mod a.
		//2 * 5 + trunc(8 + 2) +4 * 5 mod 8
		//10 + 10 + 20 mod 8
		//20+4 
		//24
	Fin Funcion
	
	Funcion N_3 = ejercicio_3 ( a,b,w )
		a=6; b=2 ; w=0//les asigno un valor numerico de acuerdo a la operacion
		w = a - b + 2 * a mod b //le doy el valor de w la operacion en general
		Escribir "Ejercicio_3"
		Escribir 6 - 2 + 2 * 6 mod 2
		//w = 6 - 2 + 2 * 6 mod 2
		//6 - 2 + 12 mod 2
		//6- 2 + 0
		//4
	Fin Funcion
	
	Funcion N_2= ejercicio_2 (a,b,z)
		a=10; b=4 ; z=0//les asigno un valor numerico de acuerdo a la operacion
		z= a * b + 3 mod a + b//le doy el valor de z la operacion en general
		Escribir "Ejercicio_2"
		Escribir   10 * 4 + 3 mod 10 + 4
		//z = 10 * 4 + 3 mod 10 + 4
		// 40 + 3 + 4
		//47
	Fin Funcion
	
	Funcion N_1= ejercicio_1(a,b,x)
